{
    "workbench.colorTheme": "Nord",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "[Tokyo Night]": {
            // or "[Tokyo Night Storm]"
            "editorCodeLens.foreground": "#7982a9", // Preferred hex color
            "window.activeBorder": "#ff0000",
            "window.inactiveBorder": "#0000ff"
        }
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.cursorBlinking": "smooth",
    //For linux
    //"editor.fontFamily": "Fira Code Retina",
    "editor.fontFamily": "FiraCodeNerdFontCompleteM-Retina",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,

    "terminal.integrated.fontSize": 16,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 10000,
    "search.showLineNumbers": true,
    "telemetry.telemetryLevel": "off",

    "vim.leader": "<space>",
    "vim.enableNeovim": true,
    "vim.surround": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.replace": "line",
    "vim.cursorStylePerMode.visual": "block",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.splitEditor"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "after": [">", "g", "v"]
        },
        {
            "before": ["<"],
            "after": ["<", "g", "v"]
        }
    ],
    "editor.lineNumbers": "relative",

    "terminal.integrated.inheritEnv": false,

    // Intellisense
    "editor.suggestSelection": "recentlyUsed",
    "editor.parameterHints.enabled": true,
    "python.defaultInterpreterPath": "/Users/dross/miniforge3/envs/mlops/bin/python",
    "terminal.external.linuxExec": "xterm-256color",
    "remote.SSH.connectTimeout": 60,
    "redhat.telemetry.enabled": false,
    "python.formatting.provider": "black",
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path.mac": "/Users/dross/.vs-kubernetes/tools/helm/darwin-arm64/helm",
        "vscode-kubernetes.minikube-path.mac": "/Users/dross/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
        "vs-kubernetes.minikube-show-information-expiration": "2023-09-28T12:05:49.841Z"
    },
    "workbench.editor.enablePreview": false,
    "markdown.updateLinksOnFileMove.enabled": "prompt",
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "quarto.mathjax.theme": "dark",
    "quarto.render.renderOnSave": true,
    "quarto.visualEditor.spellingDictionary": "en_GB",
    "quarto.render.previewType": "none",
    "breadcrumbs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "sqltools.useNodeRuntime": true

    //Jupyter plots barely visible in dark theme background. https://stackoverflow.com/a/66601351/13539744
    // "jupyter.runStartupCommands": [
    //     "import matplotlib.pyplot as plt",
    //     "plt.style.use('ggplot')"
    // ]
}
